{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "nixos_small",
    "padding": {
      "right": 1
    },
    "color": {
      "2": "magenta"
    }
  },
  "modules": [
    {
      "type": "uptime",
      "key": "runt",
      "format": "{1}d {2}h {3}m"
    },
    {
      "type": "localip",
      "key": "addr",
      "compact": true
    },
    {
      "type": "os",
      "key": "dist",
      "format": "{10} {11}"
    },
    {
      "type": "kernel",
      "key": "kern",
      "format": "{2}"
    },
    {
      "type": "packages",
      "key": "pkgs"
    },
    "break",
    {
      "type": "colors",
      "symbol": "circle"
    }
  ]
}
